# Funci√≥n de ayuda para comandos MCP
mcp_help() {
    echo "üöÄ MCP Servers - Comandos disponibles:"
    echo ""
    echo "üì± COMANDOS PRINCIPALES:"
    echo "  mcpask   - Preguntas r√°pidas"
    echo "  mcpcode  - Asistente de c√≥digo"
    echo "  mcpai    - Agente completo"
    echo "  mcpgroq  - Chat directo"
    echo ""
    echo "‚öôÔ∏è UTILIDADES:"
    echo "  mcp      - Ir al directorio MCP"
    echo "  mcptest  - Test r√°pido de conexi√≥n"
    echo ""
    echo "üí° EJEMPLOS:"
    echo "  mcpask 'qu√© es Docker'"
    echo "  mcpcode 'crear API con FastAPI'"
    echo "  mcpai chat 'analiza mi proyecto'"
}

# Funci√≥n para an√°lisis r√°pido de archivos
analyze_file() {
    if [ -f "$1" ]; then
        echo "üîç Analizando archivo: $1"
        mcpcode "Analiza este c√≥digo: $(cat "$1")"
    else
        echo "‚ùå Archivo no encontrado: $1"
        echo "Uso: analyze_file <archivo>"
    fi
}

